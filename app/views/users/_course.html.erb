<div class="row">
  <div class="col-md-3 course-title">
    <%= course.name %>
  </div>
  <div class="col-md-5">
    <%= t ".start date" %>:
    <span class="date-format">
      <%= course.start_date.strftime "%d %b" %> - <%= course.end_date.strftime "%d %b" %>
    </span>
  </div>
  <div class="col-md-2">
    <% if course.closed? %>
      <button class="btn button-close disabled"><%= t "application.buttons.closed" %></button>
    <% else %>
      <% if course.tasks.count > 0 %>
        <% if course.finished? @user %>
          <button class="btn btn-success disabled"><%= t "application.buttons.finished" %></button>
        <% else %>
          <button class="btn btn-danger disabled"><%= t "application.buttons.training" %></button>
        <% end %>
      <% else %>
        <button class="btn btn-warning disabled"><%= t "application.buttons.no_task" %></button>
      <% end %>
    <% end %>
  </div>
</div>
