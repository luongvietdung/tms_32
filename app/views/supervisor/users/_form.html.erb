<%= render "shared/form_errors", object: @user %>
<%= f.hidden_field :role, value: "trainee" %>
<div class="form-group">
  <%= f.text_field :name, class: "form-control", placeholder: t("supervisor.users.new.name") %>
</div>

<div class="form-group">
  <%= f.email_field :email, class: "form-control", placeholder: t("supervisor.users.new.email") %>
</div>

<div class="form-group">
  <%= f.submit t("application.buttons.save"), class: "btn btn-lg btn-success" %>
</div>
