<tr>
  <td><%= course.name %></td>
  <td><%= course.description.truncate(100) %></td>
  <td><%= link_to t("application.buttons.edit"),
    edit_supervisor_course_path(course), class: "btn btn-primary" %></td>
  <td><%= link_to t("application.buttons.delete"),
    supervisor_course_path(course), method: :delete, class: "btn btn-danger",
    data: {confirm: t("application.messages.confirm")} %></td>
</tr>
